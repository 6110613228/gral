<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.erichseifert.gral</groupId>
  <artifactId>GRAL</artifactId>
  <name>GRAL Graphing Library</name>
  <version>0.7</version>
  <description>A Java library for rendering graphs.</description>
  <inceptionYear>2009</inceptionYear>

  <licenses>
    <license>
        <name>GNU Library or Lesser General Public License (LGPL)</name>
        <url>http://www.gnu.org/licenses/lgpl.txt</url>
    </license>
  </licenses>

  <developers>
    <developer>
    	<id>erich</id>
        <name>Erich Seifert</name>
        <email>info[at]erichseifert.de</email>
        <timezone>+1</timezone>
    </developer>
    <developer>
    	<id>michael</id>
        <name>Michael Seifert</name>
        <email>michael.seifert[at]gmx.net</email>
        <timezone>+1</timezone>
    </developer>
  </developers>

  <build>
    <plugins>
        <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
                <source>1.6</source>
                <target>1.6</target>
            </configuration>
        </plugin>
        <plugin>
            <groupId>com.mycila.maven-license-plugin</groupId>
            <artifactId>maven-license-plugin</artifactId>
            <version>1.6.0</version>
            <configuration>
                <header>src/etc/header.txt</header>
                <properties>
                    <year>${project.inceptionYear}-2010</year>
                    <owner1>Erich Seifert</owner1>
                    <email1>info[at]erichseifert.de</email1>
                    <owner2>Michael Seifert</owner2>
                    <email2>michael.seifert[at]gmx.net</email2>
                </properties>
                <excludes>
                    <exclude>COPYING</exclude>
                    <exclude>COPYING.LESSER</exclude>
                    <exclude>TODO.txt</exclude>
                    <exclude>bin/**</exclude>
                    <exclude>src/main/resources/**</exclude>
                    <exclude>src/test/resources/**</exclude>
                    <exclude>src/docbook/**</exclude>
                </excludes>
            </configuration>
            <executions>
                <execution>
                    <phase>test</phase>
                    <goals>
                        <goal>check</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
        <plugin>
        	<groupId>org.apache.maven.plugins</groupId>
        	<artifactId>maven-javadoc-plugin</artifactId>
        	<version>2.7</version>
        	<configuration>
          		<show>private</show>
          		<nohelp>true</nohelp>
        	</configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>2.5</version>
            <configuration>
                <includeTestSourceDirectory>true</includeTestSourceDirectory>
                <configLocation>${basedir}/checkstyle.xml</configLocation>
                <consoleOutput>true</consoleOutput>
                <enableRSS>false</enableRSS>
                <enableRulesSummary>false</enableRulesSummary>
            </configuration>
            <executions>
                <execution>
                    <phase>test</phase>
                    <goals>
                        <goal>check</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
     </plugins>
  </build>

  <reporting>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-changelog-plugin</artifactId>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
        	<artifactId>maven-surefire-report-plugin</artifactId>
        	<version>2.5</version>
      	</plugin>
        <plugin>
        	<groupId>org.apache.maven.plugins</groupId>
        	<artifactId>maven-javadoc-plugin</artifactId>
        	<version>2.7</version>
        	<configuration>
          		<show>public</show>
        	</configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>2.5</version>
            <configuration>
                <includeTestSourceDirectory>true</includeTestSourceDirectory>
                <configLocation>${basedir}/checkstyle.xml</configLocation>
            </configuration>
        </plugin>
     </plugins>
  </reporting>

  <dependencies>
  	<dependency>
  		<groupId>junit</groupId>
  		<artifactId>junit</artifactId>
  		<version>4.7</version>
  		<scope>test</scope>
  		<optional>true</optional>
  	</dependency>
  	<dependency>
  		<groupId>de.erichseifert.vectorgraphics2d</groupId>
  		<artifactId>VectorGraphics2D</artifactId>
  		<version>0.6</version>
  	</dependency>
  </dependencies>

  <scm>
    <connection>scm:svn:svn://erichseifert.de/gral/trunk</connection>
    <developerConnection>scm:svn:svn://erichseifert.de/gral/trunk</developerConnection>
    <tag>HEAD</tag>
  </scm>
  
  <issueManagement>
    <system>trac</system>
    <url>http://trac.erichseifert.de/gral/</url>
  </issueManagement>

</project>
